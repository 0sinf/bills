{
  "compilerOptions": {
    "lib": ["DOM", "es2021", "DOM.Iterable"],
    "moduleResolution": "node",
    "outDir": "./dist/",
    // Why should be falsy?
    "noImplicitAny": false,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./src/types"]
  },
  "exclude": ["node_modules"]
}
